package algo;

/**
 * @author rahul
 *
 */
public class CheckMaxOrMin {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		

	}

	private static int countMaxMin(int a, int b) {
		int count = 0;
		for(int i = a; i <= b; i++) {
			int arr[] = new int[100];
			
			int j = 0;
			while(i>0) {
				arr[j] = i%10;
				i = i/10;
				j++;
			}
			for(int k = 1; k<j; k++) {
				if((arr[i-1] < arr[i] && arr[i+1] < arr[i]) || (arr[i-1] > arr[i] && arr[i+1] > arr[i])) {
					count ++;
				}
			}
		}
	}
}
